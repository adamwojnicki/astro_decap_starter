---
import Container from "./Container.astro";
---

<section>
    <Container type="narrow">
        <h1>{Astro.props.title}</h1>
        <p>{Astro.props.description}</p>
    </Container>
</section>

<style>
    section {
        background-color: #555;
        color: white;
        padding: 4rem 0;
        text-align: center;
    }

    h1 {
        font-size: 3rem;
        margin-bottom: 1rem;
    }

    p {
        font-size: 1.5rem;
        color: white;
    }
</style>
