---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

const posts = Object.values(import.meta.glob("../blog/*.md", { eager: true }));
---

<Layout title="Blog">
    <h1>Blog</h1>

    <ul>
        {
            posts.map((post: any) => (
                <li>
                    <a href={`${post.url}`}>{post.frontmatter.title}</a>
                </li>
            ))
        }
    </ul>
</Layout>
